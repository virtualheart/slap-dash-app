<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Add Complaint"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp" />

    <EditText
        android:id="@+id/txtbox_reg_user_up"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:maxLines="1"
        android:ems="10"
        android:textColor="#FFFFFF"

        android:hint="People Name" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtbox_reg_repass_up"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:hint="Complaint"
        />

    <EditText
        android:id="@+id/txtbox_reg_area_up"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:hint="Area,City"
        />


    <EditText
        android:id="@+id/txtbox_reg_phone_up"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:maxLines="1"
        android:hint="Mobile No"
        android:layout_marginTop="10dp"
        android:inputType="phone" />

    <EditText
        android:id="@+id/txtbox_reg_commands_up"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:maxLines="1"
        android:hint="Commands"
        android:layout_marginTop="10dp"
        android:inputType="text" />
    <TextView
        android:id="@+id/compd_state"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="Pending"
        android:textColor="#ffffff"
        android:visibility="visible"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spin_com_state"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:entries="@array/complint_status"
        android:visibility="visible"
        android:prompt="@string/prompt_com_state" />

    <ImageView
        android:id="@+id/compimg"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/home"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_nxt_register_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="@color/purple_500"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:text="Update Complaint"
        android:visibility="visible"
        />
    <Button
        android:id="@+id/bt_back_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="@color/purple_500"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:text="Back" />
</LinearLayout>
