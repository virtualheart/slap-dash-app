<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".RegisterActivity" >

    

    <TextView
        android:id="@+id/txt_reg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Add Complaint"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />
<Button
        android:id="@+id/btn_getlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Get Location" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp" />

    <EditText
        android:id="@+id/txtbox_reg_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
                android:textColor="#FFFFFF"
        
        android:hint="People Name" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtbox_reg_repass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
                android:textColor="#FFFFFF"
        
        android:layout_marginTop="10dp"
        android:hint="Complaint"
         />

    <EditText
        android:id="@+id/txtbox_reg_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Area,City"
                android:textColor="#FFFFFF"
        
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/txtbox_reg_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
                android:textColor="#FFFFFF"
        
        android:hint="Mobile No"
         android:layout_marginTop="10dp"
        android:inputType="phone" />

    <Button
        android:id="@+id/btn_nxt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
                 android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
        android:visibility="gone"
        android:text="Add Complaint" />
    
    <Button
        android:id="@+id/btn_nxt_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
                 android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
        android:text="Browse/Upload" />
<Button
        android:id="@+id/bt_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
                android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
  android:text="Back" />
</LinearLayout>
